<Window x:Class="DNDCombatTracker.NoteEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDCombatTracker"
        mc:Ignorable="d"
        Title="Edit Character Notes" Height="300" Width="400" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Button x:Name="ButtonOK" Content="Done" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButtonOK_Click"/>
        <TextBox x:Name="NotesBox" Margin="10,10,10,37" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Path=Character.Notes}"/>

    </Grid>
</Window>
